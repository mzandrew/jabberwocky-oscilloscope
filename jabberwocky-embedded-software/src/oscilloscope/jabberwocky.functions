take_raw_lab3_data_and_reorder_it_based_on_hitbus_position:
	push	r0-r12	@ bug/future
	ldr	r0, =beginning_of_raw_lab3_buffer_for_channel_a
	ldr	r1, =beginning_of_lab3_buffer_for_channel_a
	ldr	r2, =0 @ hitbus
	ldr	r3, =0b1000000000000 @ hitbus = 13th bit
	ldr	r6, =0b0111111111111 @ data = 12 bits
	ldr	r7, =0 @ counter for destination
	@ find hitbus:
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__find_hitbus:
	ldrh	r4, [r0, r2]
	add	r2, r2, #2
	cmp	r2, #lab3_number_of_samples*2
	ldrHS	r2, =2
	bHS	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__found_hitbus
	tst	r4, r3
	bEQ	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__find_hitbus
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__found_hitbus:
	sub	r2, r2, #2
	mov	r5, r2
	cmp	r5, #(lab3_number_of_samples-2)*2
	bHS	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__skip_higher
	@ at this point, we either found hitbus and r2 = the sample number for it
	@ or we didn't find it and we are saying the first [zeroth] sample is the hitbus sample
	@ r2 = 2*hitbus sample number
	@ r5 = 2*next sample number after hitbus sample number
	@ convert the values that are higher than the hitbus sample
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__higher:
	ldrh	r4, [r0, r5]
	add	r5, r5, #2
	tst	r4, r3
	bNE take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__higher
	str	r4, [r1, r7, lsl #2]
	inc	r7
	cmp	r5, #lab3_number_of_samples*2
	bLO	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__higher
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__skip_higher:
	ldr	r5, =0
	cmp	r2, #0
	bEQ	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__skip_lower
	@ convert the values that are lower than the hitbus sample
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__lower:
	ldrh	r4, [r0, r5]
	str	r4, [r1, r7, lsl #2]
	add	r5, r5, #2
	inc	r7
	cmp	r5, r2
	bLO	take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__lower
take_raw_lab3_data_and_reorder_it_based_on_hitbus_position__skip_lower:
	pop	r0-r12	@ bug/future
